{
	"compilerOptions":{
		"noImplicitThis":true,
		"module":"esnext",
		"target":"esnext",
		"moduleResolution":"node",
		"allowJs":true,
		"allowSyntheticDefaultImports":true,
		"baseUrl":".",
		"paths":{
			"@/*":[
				"src/*"
			]
		},
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "./types/export"
	},
	"include": ["src/**/*","types/**/*"],
	"exclude":[
		"node_modules",
		"dist"
	]
}
